/*  ACCORDION STYLES  */

.footer
  margin-top: -35px
  background: #333
  height: 35px
  width: 100%
  color: #fff
  font-size: 14px
  font-family: "Montserrat"
  padding-top: 7px;
  box-sizing: border-box

.accordion 
  font-family: "Montserrat"
  width:180px

.accordion ul 
    list-style:none
    margin:0
    padding:0    

.accordion li 
    margin:0

.accordion [type=radio], .accordion [type=checkbox] 
    display:none

.accordion label 
    display:block
    cursor:pointer
    -webkit-transition: all .2s ease-out
    -moz-transition: all .2s ease-out

.accordion .content 
    overflow:hidden
    -webkit-transition: all .5s ease-out
    -moz-transition: all .5s ease-out

.vertical ul li 
    overflow:hidden

.vertical ul li .content 
    height:0px

.vertical [type=radio]:checked ~ label ~ .content, .vertical [type=checkbox]:checked ~ label ~ .content 
  height: 395px
