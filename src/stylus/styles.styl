/*  ARTICLE PREVIEW  */

.article-preview
  display: table
  font-family: "Montserrat"
  border-bottom: 1px solid #aaaa90
  margin-bottom: 70px
  font-size: 14px
  padding-left: 0px
  padding-right: 0px
  margin-left: 25px
  color: #333
  width:850px
  @media (max-width: 900px)
    margin: 20px auto
    width: 700px
  .article-image
    height: 425
    width: 430
  .article-preview-title
    font-weight: 700
    padding-bottom: 60px
    font-size: 26px
  .article-preview-left
    display: table-cell  
  .article-preview-right
    display: table-cell
    height: 100%
    padding-left: 15px
    .article-preview-content
      text-align: justify
      word-wrap: break-word
      max-width: 400px
    .read-more
      position: absolute
      right: 0px
      bottom: 15px
      .keep-reading, .edit
        color: #aaaa90
      .edit
        padding-right: 15px

.posted-block
  position: absolute
  left: -10px
  top: 0px
  color: #fff
  font-size: 32px
  font-weight: 500
  font-family: "Montserrat"
  text-shadow: 1px 1px 0 #777;
  .posted-wrapper
    position: relative
    .posted-date
      padding-bottom: 7px;
      line-height: 37px;
      position: relative
      padding-left: 5px
      box-sizing: border-box
      width: 50px
      background: #aaaa90
    .posted-vertical
      padding: 5px 13px 5px 4px
      margin-top: -50px;
      background: #aaaa90
      transform: rotate(90deg);
      transform-origin: left bottom;
      .posted-year-month
        font-weight: 300
        font-size: 14px
      .posted-day
        font-weight: 500
        font-size: 14px

.posted-date:after
  position: absolute
  left: auto
  bottom: 4px
  display: block
  content: ""
  height: 1px
  width: 35px
  background: #717151

.full-article-header
  position: relative
  .posted-block
    left: 0px 

